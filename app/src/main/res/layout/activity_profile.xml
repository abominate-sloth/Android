<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login">

         <Button
            android:id="@+id/profile_profile_log_out"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_gravity="bottom"
            android:text="Выйти из аккаунта" />

        <Button
            android:id="@+id/profile_profile_delete"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="90dp"
            android:layout_gravity="bottom"
            android:text="Удалить     аккунт" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:text="Профиль"
        android:textAlignment="center"
        android:textColor="#DC749C"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/profile_nickname"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Ник"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Email:"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_name"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Имя"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/profile_surname"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Фамилия"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/profile_age"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Возраст"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/profile_gender"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Пол"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/profile_phone"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:inputType="phone"
                android:ems="10"
                android:hint="Мобильный номер"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/profile_country"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Страна"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/profile_birthdate"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Дата рождения"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/profile_favfish"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="400dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:hint="Любимая рыба"
                android:padding="10dp"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/profile_savebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="bottom"
        android:text="Сохранить" />

</LinearLayout>