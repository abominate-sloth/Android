<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_diver"
    android:paddingBottom="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    tools:context=".DescribeActivity">

    <TextView
        android:id="@+id/describe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textColor="#DC143C"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="TextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <TextView
        android:id="@+id/describe_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textColor="#91F48C"
        android:textSize="20sp"
        android:text="TextView" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/describe_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#383BF2"
        android:text="Добавить в избранное" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/describe_image_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"/>

</LinearLayout>